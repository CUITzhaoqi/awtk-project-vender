<window anim_hint="htranslate" theme="tab_bottom" style="sky">

  <!-- <view x="0" y="30%" w="50%" h="21%">
    <image draw_type="icon" image="test" x="40%" y="0" w="32" h="100%" />
  </view> -->
  <view style="view_border" x="0" y="20%" w="100%" h="50%" layout="r3 c0 m10">
    <!-- <image draw_type="icon" image="test" x="r" y="0" w="50%" h="21%" /> -->
    
    <view x="0" y="30%" w="50%" h="21%">
      <image draw_type="icon" image="zlg" x="c:20%" y="0" w="32" h="100%" />
      <!-- <image draw_type="icon" image="world" x="20%" y="0" w="32" h="100%" /> -->
    </view>
    <image draw_type="icon" image="verline" x="39%" y="0" w="32" h="100%" />
    <list_view x="40%"  y="27%" w="50%" h="100%" item_height="47" auto_hide_scroll_bar="true">
      <scroll_view name="view" x="c"  y="0" w="100%" h="100%">
      <list_item style="empty" layout="r1 c0 m10">
        <label w="30%" text="账户"/>
        <edit w="70%" left_margin="34" tips="输入账户" min="0" max="150" step="0.1">
          <image draw_type="icon" image="user_login" x="0" y="0" w="32" h="100%" />
        </edit>
      </list_item>
      <list_item style="empty" layout="r1 c0 m10">
        <label w="30%" text="密码"/>
        <edit w="70%" left_margin="34" tips="输入密码" min="0" max="150" step="0.1">
          <image draw_type="icon" image="passwd" x="0" y="0" w="32" h="100%" />
        </edit>
      </list_item>
      </scroll_view>
      <scroll_bar_d name="bar" x="right" y="0" w="12" h="100%" value="0"/>
    </list_view>
  </view>
  <button name="login" x="center" y="bottom:10" w="25%" h="30" text="登陆" >
    <gif image="loadding" y="0" x="right" w="30" h="100%"/>
  </button>
</window>
